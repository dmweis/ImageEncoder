        mc:Ignorable="d"
        Title="ImageDecoder" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="path_field" HorizontalAlignment="Left" Height="23" Margin="40,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="326"/>
