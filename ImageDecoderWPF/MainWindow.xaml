        <TextBox x:Name="message_box" HorizontalAlignment="Left" Height="167" Margin="40,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="326"/>
        <Button x:Name="Decode" Content="Decode" HorizontalAlignment="Left" Height="23" Margin="379,95,0,0" VerticalAlignment="Top" Width="75" Click="Dencode_Click"/>
    </Grid>
</Window>
